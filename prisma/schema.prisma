// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String?
  email String? @unique
  hashedPassword String?

  movies Movie[]
  shows Show[]
}

model Movie {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  dbId Int @unique
  title String
  image String?
  description String?
  voteAverage Float?
  date String?
  rated String?
  createdAt DateTime @default(now())
  seen Boolean @default(false)
  
  userId String @db.ObjectId
  user User @relation(fields: [userId], references: [id])

}

model Show {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  dbId Int @unique
  title String
  image String?
  description String?
  voteAverage Float?
  date String?
  rated String?
  seasons Int?
  createdAt DateTime @default(now())
  seen Boolean @default(false)
  
  userId String @db.ObjectId
  user User @relation(fields: [userId], references: [id])

}
